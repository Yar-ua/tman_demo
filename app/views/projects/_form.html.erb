<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newProject" title="create project">
  <%= icon('far', 'plus-square') %> new project
</button>
<hr/>

<!-- Modal form -->
<div class="modal fade" id="newProject" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create project</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= simple_form_for @project, remote: true do |f| %>
        <div class="modal-body">
          <%= f.input :name, label: "Tape project name here", input_html: { minlength: 3 }, class: "form-control project_name" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Create', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>